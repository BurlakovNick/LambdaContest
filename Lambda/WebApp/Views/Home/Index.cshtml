<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Map Viewer</title>
    <link rel="stylesheet" href="/Content/bootstrap.min.css">
    <link rel="stylesheet" href="/Content/viewer.css">
</head>

<body>
<div class="container-fluid">
    <h1>&#955; Map Viewer</h1>
    <fieldset>
        <legend>Map</legend>
        <div id="dropdown">
            <select id="maps-select" class="form-control">
            </select>

            <a id="download-link" href="#">Download</a>
        </div>
    </fieldset>
</div>
<div class="container-fluid">
    <fieldset>
        <legend>Canvas</legend>
        <div class="container-fluid" id="cy"></div>
        <div id="loading">
            <span class="fa fa-refresh fa-spin"></span>
        </div>
    </fieldset>
</div>
<div class="container-fluid">
    <fieldset>
        <legend>Game</legend>
        <div>
            <label>
                Шаг:
                <input type="number" id="moveNumber"/>
            </label>
        </div>
        <div>
            <label>
                <textarea id="moves" cols="100" rows="100"></textarea>
            </label>
        </div>
    </fieldset>
</div>
<!--- load scripts -->
<script src="/Scripts/jquery.min.js"></script>
<script src="/Scripts/bootstrap.min.js"></script>
<script src="/Scripts/fastclick.min.js"></script>
<script src="/Scripts/cytoscape.min.js"></script>
<script src="/Scripts/bluebird.min.js"></script>
<script src="/Scripts/js-core.js"></script>
<script src="/Scripts/viewer.js"></script>
</body>
</html>